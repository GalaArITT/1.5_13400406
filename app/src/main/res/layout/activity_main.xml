<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oliver.calculadora.MainActivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:inputType="numberDecimal"
        android:text="0"
        android:ems="10"
        android:id="@+id/edt_mostrar"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:editable="false" />

    <TextView
        android:text="+"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:id="@+id/txt_op"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_mostrar"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edt_leer"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_op"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_mostrar"
        android:editable="false" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_leer"
        android:columnCount="5"
        android:rowCount="4"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="9" />

        <Button
            android:id="@+id/btn_div"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="3"
            android:layout_row="0"
            android:text="/" />

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="4"
            android:layout_row="0"
            android:text="+/-" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/btn_mult"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="3"
            android:layout_row="1"
            android:text="*" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="2"
            android:layout_row="2"
            android:text="3" />

        <Button
            android:id="@+id/btn_res"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="3"
            android:layout_row="2"
            android:text="-" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="0" />

        <Button
            android:id="@+id/btn_punto"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="." />

        <Button
            android:id="@+id/btn_igual"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="2"
            android:layout_row="3"
            android:text="=" />

        <Button
            android:id="@+id/btn_sum"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="3"
            android:layout_row="3"
            android:text="+" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
